<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup"
    android:layout_width="350dp"
    android:layout_height="350dp"
    android:layout_gravity="center"
    android:background="@drawable/circulpopupbackground"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/popup_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="23dp"
        android:layout_marginBottom="23dp"
        android:textColor="#FFF"
        android:textSize="45sp"/>

    <LinearLayout
        android:id="@+id/edit_text_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/popup_title"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical">


        <Button
            android:id="@+id/playerbtn"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="18dp"
            android:paddingHorizontal="50dp"
            android:gravity="center"
            android:text=" Player "
            android:background="@drawable/border_button"
            android:textColor="#FFF"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/coachbtn"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/border_button"
            android:text="Coach"
            android:paddingHorizontal="50dp"
            android:textSize="20dp"
            android:textColor="#FFF"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_text_box"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dismis_popupchoose"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:background="@drawable/circulpopupbackground"
            android:text="Cancel"
            android:textColor="@color/white"
            android:textSize="15dp"/>

    </LinearLayout>


</RelativeLayout>