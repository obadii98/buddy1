<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.allFragment.FragmentExercise"
    android:id="@+id/fragment_exerc"
    android:tag="fragment_exerc"
    >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:id="@+id/calorise"
        >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="25sp"
            android:text="Target Calories"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/calorise_numb"
            android:layout_width="50dp"
            android:textSize="20sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="bold"
            android:gravity="center"
            android:text="0000"

            android:textAlignment="center"
            android:textColor="@color/white" />

    </LinearLayout>
    <TextView
        android:id="@+id/text_day"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="number of day"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_above="@+id/list_day_exerc"
        android:layout_marginBottom="20dp"
        android:gravity="center"

        ></TextView>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:padding="5dp"
        android:divider="@null"
        android:id="@+id/list_day_exerc"

        android:dividerHeight="0dp"
        ></ListView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:layout_below="@+id/list_day_exerc"
        android:layout_marginTop="25dp"
        android:gravity="center"
        >

        <ImageButton
            android:id="@+id/back_button_exer"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/hover"
            android:src="@drawable/back"
            android:padding="1000dp"


            ></ImageButton>
        <ImageButton
            android:id="@+id/next_button_exer"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/hover"
            android:src="@drawable/next"
            android:padding="1000dp"

            ></ImageButton>

    </LinearLayout>



    <Button
        android:id="@+id/rest_pro"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/hover"
        android:text="Rest program"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="50dp"
        android:textColor="@color/white"
        android:textStyle="bold"


        />

</RelativeLayout>






</FrameLayout>